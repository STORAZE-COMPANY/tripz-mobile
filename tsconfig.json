{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@mobile/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@components/*": ["./src/components/*"],
      "@theme/*": ["./src/theme/*"]
    }
  },
  "exclude": ["node_modules", "dist", "babel.config.js", "metro.config.js"]
}
